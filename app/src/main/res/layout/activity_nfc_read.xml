<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nfcContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.simplenfc.ReadActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nfcTag"
        android:src="@drawable/tag"
        android:layout_marginTop="40dp"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:id = "@+id/exerciseFinishBtn"
        android:src="@drawable/btn_exercise_exit" />

    <com.example.syoung.fitsy.common.HorizontalListView
        android:id="@+id/main_now_exercise_course_list"
        android:layout_width="wrap_content"
        android:layout_height="120dp"/>
</LinearLayout>

